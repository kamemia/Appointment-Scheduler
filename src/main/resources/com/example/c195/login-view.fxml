<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.collections.*?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ChoiceBox?>
<?import java.lang.String?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" maxHeight="720.0" maxWidth="1280.0"
      fx:controller="com.example.c195.LoginController" stylesheets="@stylesheet.css" styleClass="gradient-background">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="label" alignment="center" text="Appointment Management System"/>
    <TextField fx:id="username" promptText="Username" maxWidth="300.0">
    </TextField>
    <TextField fx:id="password" promptText="Password" maxWidth="300.0" maxHeight="50">
    </TextField>
    <Button fx:id="login" text="Login">
    </Button>
    <ChoiceBox fx:id="langBox" value="English">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="English"/>
                <String fx:value="Francais"/>
            </FXCollections>
        </items>
    </ChoiceBox>
    <Label fx:id="zone" text="Zone" layoutX="1100.0" layoutY="675.0">
    </Label>
</VBox>
